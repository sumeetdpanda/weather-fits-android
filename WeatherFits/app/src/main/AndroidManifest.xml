<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools">

<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

<application
    android:allowBackup="false"
    android:dataExtractionRules="@xml/data_extraction_rules"
    android:fullBackupContent="@xml/backup_rules"
    android:icon="@mipmap/weather_launcher_icon"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.WeatherFits"
    tools:targetApi="31">

    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="${MAPS_API_KEY}" />

    <activity
        android:name="com.conestoga.weatherfits.AboutActivity"
        android:exported="false" />

    <activity
        android:name=".ListFavouritesActivity"
        android:exported="false" />

    <activity
        android:name=".UpdatePasswordActivity"
        android:exported="false" />

    <activity
        android:name=".UpdateGenderActivity"
        android:exported="false" />

    <activity
        android:name=".UpdateEmailActivity"
        android:exported="false" />

    <activity
        android:name=".ForgotPasswordActivity"
        android:exported="false" />

    <activity
        android:name=".HomeActivity"
        android:exported="false" />

    <activity
        android:name=".SignUpActivity"
        android:exported="false" />

    <activity
        android:name=".LoginActivity"
        android:exported="false" />

    <activity
        android:name=".AccountsActivity"
        android:exported="false" />

    <activity
        android:name=".FitsActivity"
        android:exported="false"
        android:label="@string/title_activity_fits" />

    <activity
        android:name=".WearTypeActivity"
        android:exported="false"
        android:label="@string/title_activity_wear_types" />

    <activity
        android:name=".MapsActivity"
        android:exported="false"
        android:label="@string/title_activity_maps" />
    <activity
        android:name=".MainActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        <meta-data
            android:name="android.app.lib_name"
            android:value="" />
    </activity>

    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="AIzaSyBl788mABMRp2CHJMPL2bs-JsZQ3VvQSSQ" />
</application>

</manifest>
